<%= simple_form_for [:admin,@product] do |f|  %>

<div class="group">
	<%=small_image(@product,"cart-items-img")  %>
</div>
<div class="group"><%= f.input :title  %></div>
<div class="group"><%= f.input :description  %></div>
<div class="group"><%= f.input :quantity  %></div>
<div class="group"><%= f.input :price  %></div>
<div class="group"><%= f.input :friendly_id %></div>


<div class="group">
	<%= f.association :category  %>
	<%= f.select :category_id, Category.all.map{|x| [x.name,x.id]},{},:class=>"form-control"  %>
</div>
<div class="group">
	<%#= f.association :groups, :as=>"check_boxes" %>
	<%= f.association :groups%>
</div>

<div class="group">
<%= f.input :show_on, :as=>:string %>
	
</div>
<div class="group"><%= f.input :image, as: :file  %></div>
<%= f.submit "Submit",data:{disable_with:"Submitting..."}  %>

<% end %>

<%= content_for :handwrite_javascript do %>
<script type="text/javascript">
	$('#product_category_id').select2();
	$('#product_group_ids').select2();
	   $('#product_show_on').datepicker({ format: "yyyy/mm/dd" });
	   autosize($('#product_description'));
</script>
<% end %>